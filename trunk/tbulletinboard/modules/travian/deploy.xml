<tbb-module>

	<info>
		<group>travian</group>
		<name>Travian Tools</name>
		<version>1.0</version>
		<description>Deze module breid het board uit met een aantal functionaliteiten tbv Travian.
			- Extra zoekoptie om doelwitten te vinden in Travian
			- Beheer plugin om een gebruikers account te koppelen aan Travian
			- Een gebruikerssysteem plugin om een gebruikersgroep te creeren aan de hand van een Travian Alliantie
			- Smarttags om Travian reports netjes in berichten te tonen
			- Een leden-panel plugin om een kaartje van je alliantie te tonen, en deze te kunnen vergelijken met de ligging van andere allianties.
			- Een leden-panel plugin om sitters op te geven
		</description>
	</info>

	<author>
		<name>Matthijs Groen</name>
		<url>http://thaisi.thaboo.com/</url>
		<email>matthijs.groen@gmail.com</email>
	</author>

	<plugin type="admin">
		<name>Travian Admin</name>
		<version>0.6</version>
		<build>1</build>
		<filename>TravianAdminPlugin.class.php</filename>
		<classname>TravianAdminPlugin</classname>
	</plugin>

	<plugin type="usertype">
		<name>Travian Alliance groups</name>
		<version>1.0</version>
		<build>1</build>
		<filename>TravianMemberModule.class.php</filename>
		<classname>TravianMemberModule</classname>
	</plugin>

	<plugin type="search">
		<name>Travian Target Search</name>
		<version>1.1</version>
		<build>2</build>
		<filename>TravianSearchPlugin.class.php</filename>
		<classname>TravianSearchPlugin</classname>
	</plugin>

	<plugin type="topic">
		<name>Travian Aanvals planner</name>
		<version>0.1</version>
		<build>1</build>
		<filename>TravianAttackTopicPlugin.class.php</filename>
		<classname>TravianAttackTopicPlugin</classname>
	</plugin>

	<plugin type="userpanel">
		<name>Travian User options</name>
		<version>0.2</version>
		<build>1</build>
		<filename>TravianUserPanelPlugin.class.php</filename>
		<classname>TravianUserPanelPlugin</classname>
	</plugin>

	<plugin type="userpanel">
		<name>Alliance check tool</name>
		<version>0.1</version>
		<build>1</build>
		<filename>TravianUserPanelAlliancePlugin.class.php</filename>
		<classname>TravianUserPanelAlliancePlugin</classname>
	</plugin>

	<plugin type="smarttag">
		<name>Forum tags</name>
		<version>1.0</version>
		<build>1</build>
		<filename>TravianTagsPlugin.class.php</filename>
		<classname>TravianTagsPlugin</classname>
	</plugin>
</tbb-module>
